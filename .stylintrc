// https://github.com/SimenB/stylint#options
{
	"blocks": false,
	"brackets": "never",
	"colons": "never",
	"colors": false,
	"commaSpace": "always",
	"commentSpace": "always",
	"cssLiteral": "never",
	"customProperties": [],
	"depthLimit": false,
	"duplicates": true,
	"efficient": "always",
	"exclude": [],
	"extendPref": false,
	"globalDupe": false,
	"groupOutputByFile": true,
	"indentPref": false,
	"leadingZero": "never",
	"maxErrors": false,
	"maxWarnings": false,
	"mixed": false,
	"mixins": [],
	"namingConvention": "BEM",
	"namingConventionStrict": true,
	"none": "never",
	"noImportant": false,
	"parenSpace": "never",
	"placeholders": "always",
	"prefixVarsWithDollar": "always",
	"quotePref": "double",
	"reporter": "stylint-stylish",
	"reporterOptions": {
		"absolutePath": true
	},
	"semicolons": "never",
	"sortOrder": false,
	"stackedProperties": "never",
	"trailingWhitespace": "never",
	"universal": false,
	"valid": true,
	"zeroUnits": "never",
	"zIndexNormalize": false
}
